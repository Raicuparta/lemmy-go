{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./ts-output",
    "target": "ES2017",
    "moduleResolution": "Node16",
    "module": "ES6",
    "sourceMap": false,
    "rootDir": "src/scripts",
    "noEmitOnError": true
  },
  "exclude": ["**/*.d.ts", "build", "node_modules"]
}
